---
import PageLayout from "../layouts/PageLayout.astro";
import Hero from "../components/blocks/Hero.astro";
import Change from "../components/blocks/Change.astro";
import Split from "../components/blocks/Split.astro";
import What from "../components/blocks/What.astro";
import How from "../components/blocks/How.astro";
import Binary from "../components/blocks/Binary.astro";
import Augmented from "../components/blocks/Augmented.astro";
---

<PageLayout>
  <Hero />
  <Change />
  <Split />
  <What />
  <How />
  <Binary />
  <Augmented />
</PageLayout>

<script>
  import { mountReveal } from "../lib/reveal";
  import { mountRupture } from "../lib/rupture";
  document.addEventListener("DOMContentLoaded", () => {
    mountReveal();
    mountRupture();
  });
</script>
