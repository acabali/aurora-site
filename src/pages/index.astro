---
import PageLayout from "../layouts/PageLayout.astro";
import Hero from "../components/blocks/Hero.astro";
import Change from "../components/blocks/Change.astro";
import Split from "../components/blocks/Split.astro";
import Category from "../components/blocks/Category.astro";
import Binary from "../components/blocks/Binary.astro";
import Cierre from "../components/blocks/Cierre.astro";
import Demo from "../components/blocks/Demo.astro";
---

<PageLayout>
  <Hero />
  <Change />
  <Split />
  <Category />
  <Binary />
  <Cierre />
  <Demo />
</PageLayout>

<script>
  import { mountReveal } from "../lib/reveal";
  import { mountRupture } from "../lib/rupture";
  document.addEventListener("DOMContentLoaded", () => {
    mountReveal();
    mountRupture();
  });
</script>
