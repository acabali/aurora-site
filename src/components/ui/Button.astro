---
interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  class?: string;
}

const { href, variant = "primary", class: className } = Astro.props;
const Tag = href ? "a" : "button";
---

<Tag href={href} class:list={["btn", `btn-${variant}`, className]}>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
    padding: 0 var(--space-6);
    font-size: 0.94rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    border-radius: var(--radius-md);
    border: 1px solid var(--line-soft);
    cursor: pointer;
    font-family: var(--font-body);
    transition: border-color var(--duration-fast) ease, background var(--duration-fast) ease,
      transform var(--duration-fast) ease;
  }

  .btn-primary {
    color: var(--text-main);
    border-color: rgba(0, 218, 183, 0.38);
    background: rgba(0, 218, 183, 0.12);
  }

  .btn-primary:hover {
    border-color: rgba(0, 218, 183, 0.76);
    background: rgba(0, 218, 183, 0.2);
    transform: translateY(-1px);
  }

  .btn-secondary {
    color: var(--text-main);
    border-color: rgba(255, 255, 255, 0.34);
    background: rgba(9, 16, 27, 0.56);
  }

  .btn-secondary:hover {
    border-color: rgba(255, 255, 255, 0.62);
    background: rgba(9, 16, 27, 0.8);
    transform: translateY(-1px);
  }
</style>
