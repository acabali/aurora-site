---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { comoTrabaja } = home;
---

<Section id="como-trabaja">
  <Container>
    <div class="reveal block-category">
      <h2 class="section-title">{comoTrabaja.title}</h2>
      <div class="category-stack">
        {comoTrabaja.blocks.map((line) => (
          <p class="category-line">{line}</p>
        ))}
      </div>
    </div>
  </Container>
</Section>

<style>
  .category-stack {
    display: grid;
    gap: var(--space-6);
  }
  .category-line {
    font-size: clamp(1.25rem, 2.2vw, 1.6rem);
    line-height: 1.34;
    letter-spacing: -0.01em;
    max-width: 42ch;
    color: var(--text-0);
    opacity: 0;
    transform: translateY(8px);
  }
  .block-category.is-in .category-line {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }
  .block-category.is-in .category-line:nth-child(2) {
    transition-delay: 0.12s;
  }
  .block-category.is-in .category-line:nth-child(3) {
    transition-delay: 0.24s;
  }
  @media (prefers-reduced-motion: reduce) {
    .category-line {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
  @media (max-width: 640px) {
    .category-stack {
      gap: var(--space-5);
    }
  }
</style>
