---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { comoTrabaja } = home;
---

<Section id="como-trabaja">
  <Container>
    <div class="reveal block-category">
      <h2 class="section-title">{comoTrabaja.title}</h2>
      {comoTrabaja.lines.map((line) => (
        <p class="section-copy">{line}</p>
      ))}
    </div>
  </Container>
</Section>

<style>
  .block-category {
    border: 1px solid var(--border);
    background: var(--bg);
    padding: var(--space-10) var(--space-8);
    border-radius: var(--radius-md);
  }
</style>
