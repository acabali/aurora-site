---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { queEsAurora } = home;
---

<Section id="que-es-aurora">
  <Container>
    <div class="reveal block-category">
      <h2 style="font-size:var(--text-xl);font-weight:600;margin-bottom:var(--space-6);">Qu√© es Aurora</h2>
      {queEsAurora.body.map((line) => (
        <p style="margin-bottom:var(--space-3);color:var(--fg);line-height:var(--leading-relaxed);">{line}</p>
      ))}
    </div>
  </Container>
</Section>

<style>
  .block-category {
    border: 1px solid var(--border);
    background: var(--bg);
    padding: var(--space-10) var(--space-8);
    border-radius: var(--radius-md);
  }
</style>
