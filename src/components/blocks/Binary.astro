---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { binario } = home;
---

<Section id="binario" class="block-binary-wrap">
  <Container>
    <div class="reveal block-binary">
      <h2 class="section-title">Binario</h2>
      {binario.body.map((line) => (
        <p class="section-copy">{line}</p>
      ))}
    </div>
  </Container>
</Section>

<style>
  .block-binary-wrap { border-top: 1px solid var(--border); }
</style>
