---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { binario } = home;
---

<Section id="binario" class="block-binary-wrap">
  <Container>
    <div class="reveal block-binary">
      <h2 style="font-size:var(--text-2xl);font-weight:600;margin-bottom:var(--space-6);">Binario</h2>
      {binario.body.map((line) => (
        <p style="color:var(--fg);margin-bottom:var(--space-3);line-height:var(--leading-relaxed);">{line}</p>
      ))}
    </div>
  </Container>
</Section>

<style>
  .block-binary-wrap { border-top: 1px solid var(--border); }
</style>
