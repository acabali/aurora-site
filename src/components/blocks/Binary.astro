---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import Button from "../ui/Button.astro";
import { home } from "../../content/home";
const { binario } = home;
---

<Section id="binario" class="block-binary-wrap">
  <Container>
    <div class="reveal block-binary">
      <h2 class="binary-title">{binario.title}</h2>
      <div class="binary-panels">
        <div class="binary-panel binary-panel-before">
          <p>Operar como antes</p>
        </div>
        <div class="binary-panel binary-panel-now">
          <p>Calibrar bajo el est√°ndar actual</p>
        </div>
      </div>
      <div class="binary-cta">
        <Button href={binario.ctaHref}>{binario.cta}</Button>
      </div>
    </div>
  </Container>
</Section>
