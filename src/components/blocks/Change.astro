---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { autoridad } = home;
---

<Section id="autoridad">
  <Container>
    <div class="reveal authority-layout">
      <div class="authority-copy">
        <h2 class="section-title">{autoridad.title}</h2>
        <p class="authority-lead">{autoridad.lead}</p>
        <p class="section-copy">{autoridad.body}</p>
      </div>
      <div class="authority-blueprint" aria-hidden="true">
        <svg viewBox="0 0 620 360" role="presentation">
          <g class="blueprint-grid">
            <path d="M0 60H620 M0 140H620 M0 220H620 M0 300H620" />
            <path d="M90 0V360 M210 0V360 M330 0V360 M450 0V360 M570 0V360" />
          </g>
          <g class="blueprint-structure">
            <rect x="70" y="70" width="180" height="95" rx="8" />
            <rect x="290" y="120" width="170" height="95" rx="8" />
            <rect x="410" y="250" width="150" height="70" rx="8" />
            <line x1="250" y1="118" x2="290" y2="165" />
            <line x1="460" y1="215" x2="485" y2="250" />
          </g>
        </svg>
      </div>
    </div>
  </Container>
</Section>
