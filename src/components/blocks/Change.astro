---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { cambio } = home;
---

<Section id="cambio">
  <Container>
    <div class="reveal block-change">
      <h2 style="font-size:var(--text-2xl);font-weight:600;margin-bottom:var(--space-6);">CAMBIO REAL</h2>
      {cambio.body.map((line) => (
        <p style="color:var(--fg);margin-bottom:var(--space-3);line-height:var(--leading-relaxed);">{line}</p>
      ))}
    </div>
  </Container>
</Section>
