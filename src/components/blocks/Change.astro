---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { autoridad } = home;
---

<Section id="autoridad" class="change-section">
  <Container>
    <div class="reveal authority-layout">
      <div class="authority-copy">
        <h2 class="section-title">{autoridad.title}</h2>
        <p class="authority-lead">{autoridad.lead}</p>
        <p class="section-copy">{autoridad.body}</p>
      </div>
      <div class="change-divider" aria-hidden="true"></div>
      <div class="authority-blueprint" aria-hidden="true">
        <svg viewBox="0 0 620 360" role="presentation">
          <g class="blueprint-grid">
            <path d="M0 60H620 M0 120H620 M0 180H620 M0 240H620 M0 300H620" />
            <path d="M80 0V360 M180 0V360 M280 0V360 M380 0V360 M480 0V360 M580 0V360" />
          </g>
          <g class="blueprint-structure">
            <rect x="52" y="58" width="168" height="88" rx="6" />
            <rect x="254" y="102" width="154" height="82" rx="6" />
            <rect x="428" y="142" width="146" height="78" rx="6" />
            <rect x="278" y="232" width="186" height="70" rx="6" />
            <line x1="220" y1="102" x2="254" y2="142" />
            <line x1="408" y1="142" x2="428" y2="180" />
            <line x1="336" y1="184" x2="336" y2="232" />
          </g>
        </svg>
      </div>
    </div>
  </Container>
</Section>
