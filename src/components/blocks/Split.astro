---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { comparativa } = home;
---

<Section id="comparativa" class="block-split-wrap">
  <Container>
    <div class="reveal rupture-block">
      <h2 class="section-title rupture-title">{comparativa.title}</h2>
      <div class="rupture-grid">
        <div class="rupture-column">
          <h3>Antes</h3>
          <p>{comparativa.antes}</p>
        </div>
        <div class="rupture-divider" aria-hidden="true"></div>
        <div class="rupture-column">
          <h3>Ahora</h3>
          <p>{comparativa.ahora}</p>
        </div>
      </div>
    </div>
  </Container>
</Section>

<style>
  .block-split-wrap {
    border-top: 1px solid var(--line);
  }
  .rupture-block {
    min-height: 48vh;
    display: grid;
    align-content: center;
    gap: var(--space-10);
  }
  .rupture-title {
    margin-bottom: 0;
  }
  .rupture-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 1px minmax(0, 1fr);
    gap: var(--space-8);
    align-items: stretch;
  }
  .rupture-column {
    max-width: 26ch;
  }
  .rupture-column h3 {
    font-size: var(--small);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-1);
    margin-bottom: var(--space-4);
  }
  .rupture-column p {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--text-0);
  }
  .rupture-divider {
    width: 1px;
    background: #2e5bff;
  }
  @media (max-width: 820px) {
    .rupture-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    .rupture-divider {
      display: none;
    }
  }
</style>
