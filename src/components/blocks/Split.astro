---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { comparativa } = home;
---

<Section id="comparativa" class="rupture-section">
  <Container>
    <div class="reveal rupture-block">
      <h2 class="section-title rupture-title">{comparativa.title}</h2>
      <div class="rupture-grid">
        <div class="rupture-column rupture-before">
          <h3>Antes</h3>
          <p>{comparativa.antes}</p>
        </div>
        <div class="rupture-axis" aria-hidden="true"></div>
        <div class="rupture-column rupture-now">
          <h3>Ahora</h3>
          <p>{comparativa.ahora}</p>
        </div>
      </div>
    </div>
  </Container>
</Section>
