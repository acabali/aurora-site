---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { rupture } = home;
---

<Section id="rupture">
  <Container>
    <div class="reveal block-split" data-rupture>
      <h2 style="font-size:var(--text-2xl);font-weight:600;margin-bottom:var(--space-6);">{rupture.headline}</h2>
      <div class="rupture-grid" style="display:grid;grid-template-columns:1fr 1fr;gap:var(--space-6);margin-bottom:var(--space-6);">
        <div class="rupture-col rupture-before" data-rupture-before style="padding:var(--space-6);border:1px solid var(--border);background:var(--before-bg);font-family:var(--font-mono);font-size:var(--text-sm);color:var(--fg-muted);">
          <h3 style="font-size:var(--text-sm);font-weight:600;margin-bottom:var(--space-3);color:var(--fg);">{rupture.before.title}</h3>
          {rupture.before.lines.map((line) => <p style="margin-bottom:var(--space-2);">{line}</p>)}
        </div>
        <div class="rupture-col rupture-now" data-rupture-now style="padding:var(--space-6);border:1px solid var(--border);background:var(--now-bg);font-size:var(--text-sm);">
          <h3 style="font-size:var(--text-sm);font-weight:600;margin-bottom:var(--space-3);color:var(--fg);">{rupture.now.title}</h3>
          {rupture.now.lines.map((line) => <p style="margin-bottom:var(--space-2);">{line}</p>)}
        </div>
      </div>
      <p style="font-weight:500;color:var(--fg);">{rupture.close}</p>
    </div>
  </Container>
</Section>

<style>
  @media (max-width: 640px) { .rupture-grid { grid-template-columns: 1fr !important; } }
</style>
