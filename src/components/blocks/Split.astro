---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { ruptura } = home;
---

<Section id="ruptura" class="block-split-wrap">
  <Container>
    <div class="reveal block-split" data-rupture>
      <h2 class="split-title">Ruptura</h2>
      <div class="rupture-body">
        {ruptura.body.map((line) => (
          <p class="rupture-line">{line}</p>
        ))}
      </div>
    </div>
  </Container>
</Section>

<style>
  .block-split-wrap {
    background: var(--bg-dark);
    color: var(--fg-dark);
  }
  .block-split .split-title {
    font-size: clamp(1.5rem, 3vw, var(--h2));
    font-weight: 600;
    margin-bottom: var(--space-6);
    line-height: var(--lh-title);
    letter-spacing: -0.01em;
    color: var(--fg-dark);
  }
  .rupture-body { max-width: 36rem; }
  .rupture-line { margin-bottom: var(--space-3); color: var(--fg-dark); }
  .rupture-line:last-child { font-weight: 600; }
</style>
