---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { what } = home;
---

<Section id="what">
  <Container>
    <div class="reveal block-what">
      <h2 style="font-size:var(--text-2xl);font-weight:600;margin-bottom:var(--space-6);">{what.headline}</h2>
      <ul style="list-style:none;margin-bottom:var(--space-6);">
        {what.items.map((item) => (
          <li style="margin-bottom:var(--space-3);padding-left:var(--space-4);position:relative;">
            <span style="position:absolute;left:0;color:var(--muted);">â€”</span>{item}
          </li>
        ))}
      </ul>
      <p style="font-weight:500;color:var(--fg);">{what.close}</p>
    </div>
  </Container>
</Section>
