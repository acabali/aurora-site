---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { how } = home;
---

<Section id="how">
  <Container>
    <div class="reveal block-how">
      <h2 class="block-head">{how.headline}</h2>
      <div class="how-grid">
        {how.lines.map((line) => <p class="how-line">{line}</p>)}
      </div>
      <p class="block-close">{how.close}</p>
    </div>
  </Container>
</Section>

<style>
  .block-how .block-head { font-size: var(--text-2xl); font-weight: 600; margin-bottom: var(--space-8); }
  .how-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4) var(--space-10);
    margin-bottom: var(--space-10);
  }
  .how-line { margin-bottom: 0; color: var(--muted); font-size: var(--text-sm); }
  .block-how .block-close { font-weight: 500; color: var(--fg); }
  @media (max-width: 640px) { .how-grid { grid-template-columns: 1fr; } }
</style>
