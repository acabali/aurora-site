---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { how } = home;
---

<Section id="how">
  <Container>
    <div class="reveal block-how">
      <h2 style="font-size:var(--text-2xl);font-weight:600;margin-bottom:var(--space-6);">{how.headline}</h2>
      <div style="margin-bottom:var(--space-6);">
        {how.lines.map((line) => <p style="margin-bottom:var(--space-2);color:var(--fg-muted);">{line}</p>)}
      </div>
      <p style="font-weight:500;color:var(--fg);">{how.close}</p>
    </div>
  </Container>
</Section>
