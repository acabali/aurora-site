---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { problem } = home;
---

<Section id="problem" class="block-problem-wrap">
  <Container>
    <div class="reveal block-problem">
      <h2 class="block-problem-title">{problem.title}</h2>
      <p class="block-problem-line">{problem.line1}</p>
      <p class="block-problem-line">{problem.line2}</p>
      <p class="block-problem-close">{problem.line3}</p>
    </div>
  </Container>
</Section>

<style>
  .block-problem-wrap {
    background: #fff;
    border-top: 1px solid var(--border);
    padding-block: var(--space-16);
  }
  .block-problem {
    max-width: 40rem;
  }
  .block-problem-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-8);
    color: var(--fg);
  }
  .block-problem-line {
    font-size: var(--text-base);
    color: var(--fg);
    margin-bottom: var(--space-4);
    line-height: var(--leading-relaxed);
  }
  .block-problem-close {
    font-weight: 600;
    color: var(--fg);
    margin-bottom: 0;
  }
</style>
