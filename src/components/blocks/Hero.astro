---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import Button from "../ui/Button.astro";
import { home } from "../../content/home";
const { hero } = home;
---

<Section id="hero">
  <Container>
    <div class="reveal block-hero" style="text-align:center;max-width:42rem;margin-inline:auto;">
      <h1 style="font-size:var(--text-4xl);font-weight:700;line-height:var(--leading-tight);margin-bottom:var(--space-4);">{hero.headline}</h1>
      <div class="hero-line" aria-hidden="true"></div>
      <p class="hero-sub" style="font-size:var(--text-lg);color:var(--fg);font-weight:500;margin-bottom:var(--space-4);line-height:var(--leading-relaxed);">{hero.sub}</p>
      <p style="font-size:var(--text-base);color:var(--muted);margin-bottom:var(--space-3);">{hero.value}</p>
      <p style="font-size:var(--text-sm);color:var(--muted);margin-bottom:var(--space-8);">{hero.democratize}</p>
      <Button href="#augmented">{hero.cta}</Button>
    </div>
  </Container>
</Section>
