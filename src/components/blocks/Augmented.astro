---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";
const { augmented } = home;
---

<Section id="augmented" class="block-augmented-wrap">
  <Container>
    <div class="reveal block-augmented">
      <h2 class="augmented-head">{augmented.headline}</h2>
      <div class="augmented-lead">
        {augmented.lead.map((line) => <p>{line}</p>)}
      </div>
      <ul class="augmented-list">
        {augmented.bullets.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
      <p class="augmented-close">{augmented.close}</p>
    </div>
  </Container>
</Section>

<style>
  .block-augmented-wrap {
    background: #e8e9ea;
  }
  .block-augmented {
    padding-block: var(--space-12);
    max-width: 40rem;
    margin-inline: auto;
  }
  .augmented-head { font-size: var(--text-2xl); font-weight: 600; margin-bottom: var(--space-6); }
  .augmented-lead { margin-bottom: var(--space-8); color: var(--fg); }
  .augmented-lead p { margin-bottom: var(--space-2); }
  .augmented-list {
    list-style: none;
    margin-bottom: var(--space-8);
  }
  .augmented-list li {
    position: relative;
    padding-left: var(--space-6);
    margin-bottom: var(--space-3);
  }
  .augmented-list li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.4em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent);
  }
  .augmented-close { font-weight: 600; font-size: var(--text-lg); color: var(--fg); }
</style>
