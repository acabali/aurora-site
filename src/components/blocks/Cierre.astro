---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import Button from "../ui/Button.astro";
import { home } from "../../content/home";
const { cierre } = home;
---

<Section id="cta-demo" class="block-cierre-wrap">
  <Container>
    <div class="reveal block-cierre">
      <p class="section-copy section-copy-strong cierre-line">{cierre.line}</p>
      <Button href={cierre.ctaHref}>{cierre.cta}</Button>
    </div>
  </Container>
</Section>

<style>
  .block-cierre-wrap {
    padding-block: var(--space-16);
    border-top: 1px solid var(--border);
  }
  .block-cierre {
    text-align: center;
    max-width: 44rem;
    margin-inline: auto;
  }
  .block-cierre .cierre-line {
    margin-bottom: var(--space-6);
  }
</style>
