---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import Button from "../ui/Button.astro";
import { home } from "../../content/home";
const { cierre } = home;
---

<Section id="demo" class="block-cierre-wrap">
  <Container>
    <div class="reveal block-cierre" style="text-align:center;max-width:36rem;margin-inline:auto;">
      {cierre.lines.map((line) => (
        <p style="font-size:var(--text-lg);color:var(--fg);margin-bottom:var(--space-4);line-height:var(--leading-relaxed);">{line}</p>
      ))}
      <Button href={cierre.ctaHref}>{cierre.cta}</Button>
    </div>
  </Container>
</Section>

<style>
  .block-cierre-wrap {
    padding-block: var(--space-16);
    border-top: 1px solid var(--border);
  }
</style>
