---
import "../styles/tokens.css";
import "../styles/global.css";

interface Props {
  title?: string;
  page?: "home" | "demo" | "default";
}

const { title = "Aurora", page = "default" } = Astro.props;
const showProductsToggle = page === "home";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body data-page={page} data-algorithm="core">
    <header class="site-header">
      <a href="/" class="logo-lockup" aria-label="Aurora">
        <span class="logo-symbol" aria-hidden="true"></span>
        <span class="logo-wordmark">AURORA</span>
      </a>

      <nav class="site-nav" aria-label="Principal">
        {showProductsToggle ? (
          <button
            type="button"
            class="header-action"
            data-products-toggle
            aria-controls="products-menu"
            aria-expanded="false"
          >
            Productos
          </button>
        ) : (
          <a href="/#productos" class="header-action">Productos</a>
        )}
        <a href="/demo" class="header-action">Demo</a>
      </nav>
    </header>

    <slot />
  </body>
</html>
