---
import Container from "../ui/Container.astro";
import Section from "../ui/Section.astro";
import { home } from "../../content/home";

const { whatAurora } = home;
---

<Section id="what-aurora" class="manifesto-section">
  <Container>
    <div class="manifesto-flow">
      <h2 class="section-title reveal">{whatAurora.title}</h2>
      {whatAurora.blocks.map((line, idx) => (
        <p class="manifesto-line reveal" style={`--m-index:${idx};`}>{line}</p>
      ))}
    </div>
  </Container>
</Section>
